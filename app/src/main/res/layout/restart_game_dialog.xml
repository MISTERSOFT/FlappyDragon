<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/alertRestartBackgroundColor">

    <ImageView
        android:id="@+id/image_lose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="-60dp"
        android:src="@drawable/bird_red_hit_1" />

    <TextView
        android:id="@+id/restart_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/restart"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/image_lose"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/restart_text">
        <TableRow>
            <Button
                android:id="@+id/yes_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_game"
                android:text="@string/yes"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/no_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_game"
                android:text="@string/no"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>