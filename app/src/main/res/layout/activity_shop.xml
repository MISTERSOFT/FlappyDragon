<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackgroundColor"
    tools:context="me.sofianehamadi.flyingbird.ShopActivity">

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_coins_earn"
        android:fontFamily="sans-serif"
        android:layout_marginEnd="33dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/shopTotalCoin"
        android:layout_alignEnd="@+id/shopTotalCoin" />

    <TextView
        android:text="@string/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewShopTitle"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/shopTotalCoin"
        android:layout_marginStart="10dp" />

    <ListView
        android:id="@+id/listViewShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewShopTitle"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/coin2"
        android:id="@+id/shopTotalCoin"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
