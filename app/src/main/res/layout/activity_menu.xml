<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:background="@drawable/menu_background"
    tools:context="me.sofianehamadi.flyingbird.MenuActivity">


    <ImageButton
        android:id="@+id/shop_button"
        android:layout_height="wrap_content"
        android:src="@drawable/shop_unpressed"
        android:layout_marginBottom="260dp"
        android:layout_centerHorizontal="false"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <ImageButton
    android:id="@+id/about_button"
        android:layout_height="wrap_content"
        android:src="@drawable/about_unpressed"
        android:layout_marginBottom="180dp"
        android:layout_centerHorizontal="false"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <ImageButton
    android:id="@+id/options_button"
        android:layout_height="wrap_content"
        android:src="@drawable/options_unpressed"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="false"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_height="wrap_content"
        android:src="@drawable/play_unpressed"
        android:layout_marginBottom="340dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerInParent="false"
        android:layout_above="@+id/about_button"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/coin2"
        android:id="@+id/menuTotalCoin"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coins_earn"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/menuTotalCoin"
        android:layout_toStartOf="@+id/menuTotalCoin"
        android:paddingRight="3dp" />

</RelativeLayout>
