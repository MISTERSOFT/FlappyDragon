<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/buttonBuyPressed"
                android:endColor="@color/buttonBuyPressed"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonBuyPressed" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/buttonBuyFocused"
                android:startColor="@color/buttonBuyFocused"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonBuyFocused" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/buttonBuyIdle"
                android:startColor="@color/buttonBuyIdle"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonBuyIdle" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>